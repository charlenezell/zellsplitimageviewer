{
    "name": "__MSG_appName__",
    "description": "__MSG_appDescription__",
    "version": "2",
    "manifest_version": 2,
    "default_locale": "en",
    "permissions": [
        "alarms",
        "app.window",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        {
            "fileSystem": [
                "write",
                "retainEntries",
                "directory"
            ]
        },
        "fullscreen",
        {
            "mediaGalleries": [
                "read",
                "delete",
                "copyTo",
                "allAutoDetected"
            ]
        },
        "notifications",
        "pointerLock",
        "power",
        "serial",
        "storage",
        "syncFileSystem",
        "system.storage",
        "webview",
        "<all_urls>"
    ],
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "app": {
        "background": {
            "scripts": [
                "scripts/main.js",
                "scripts/chromereload.js"
            ]
        }
    }
}
